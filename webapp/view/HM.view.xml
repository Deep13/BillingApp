<mvc:View controllerName="Billing.Billing.controller.HM" xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}: HM Entry" titleAlignment="Center"
        showNavButton="true"
        navButtonPress="onpressBack">
        <content>

            <Table id="idTable" sticky="ColumnHeaders"
                growing="true" growingThreshold="20"
                items="{/results}">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title id="tableHeader" text="" level="H2" />
                            <ToolbarSpacer />
                            <Button text='Add +' type='Emphasized' press="onAdd" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column hAlign="Left">
                        <Label text="Id" />
                    </Column>
                    <Column hAlign="Left">
                        <Label text="Om Type" />
                    </Column>
                    <Column hAlign="Left">
                        <Label text="HM" />
                    </Column>
                    <Column hAlign="Left">
                        <Label text="" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{id}" />
                            <Text text="{om_type}" />
                            <Text text="{item}" />
                            <Button icon="sap-icon://edit" type="Emphasized"
                                press="onPressEdit" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </content>
        <footer>
            <OverflowToolbar>
                <HBox alignItems="Center" alignContent="Center" justifyContent="Center"
                    width="100%">
                    <Text text=" A RuDe Labs Production Â© 2024" />
                </HBox>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>