<mvc:View controllerName="Billing.Billing.controller.VoucherList" xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}: Voucher" titleAlignment="Center" showNavButton="true"
        navButtonPress="onpressBack">
        <content>

            <Table id="idTable" sticky="ColumnHeaders"
                growing="true" growingThreshold="20"
                items="{/results}">
                <headerToolbar>
                    <Toolbar>
                        <content>
                            <Title id="tableHeader" text="" level="H2" />
                            <ToolbarSpacer />
                            <Text id="rate" text="" />
                            <Input id="grams" width="100px" placeholder="Grams" submit="calRate" />
                            <Input id="gold_rate" width="100px" placeholder="Gold Rate" />
                            <Button icon="sap-icon://print"
                                press="onPressPrintAll" tooltip="Print" />
                        </content>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column hAlign="Center">
                        <Label text="Id" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Voucher Date" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Gold Rate" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Cash" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Card" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="UPI" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Bank" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Cheque" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Old Gold" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="Total Amount" />
                    </Column>

                    <Column hAlign="Center">
                        <Label text="Gram" />
                    </Column>
                    <Column hAlign="Center">
                        <Label text="" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{id}" />
                            <Text text="{voucher_date}" />
                            <Text text="{rate}" />
                            <Text text="{cash}" />
                            <Text text="{card}" />
                            <Text text="{upi}" />
                            <Text text="{bank}" />
                            <Text text="{cheque}" />
                            <Text text="{oldgold}" />
                            <Text text="{amount}" />
                            <Text
                                text="{parts: [
                                'rate',
                                'amount'
                            ],
                            formatter: '.getgram'}" />
                            <Button icon="sap-icon://print"
                                press="onPressPrint" tooltip="Print" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </content>
        <footer>
            <OverflowToolbar>
                <HBox alignItems="Center" alignContent="Center" justifyContent="Center"
                    width="100%">
                    <Text text=" A RuDe Labs Production Â© 2024" />
                </HBox>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>