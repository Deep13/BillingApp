<mvc:View controllerName="Billing.Billing.controller.OrderView" xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}: ORDER" titleAlignment="Center"
        showNavButton="true"
        navButtonPress="onpressBack" class="sapUiSizeCompact">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm id="SimpleFormChangeColumn_oneGroup234"
                    editable="true"
                    layout="ColumnLayout"
                    title="Order Details"
                    columnsM="2"
                    columnsL="3"
                    columnsXL="3"
                >
                    <f:toolbar>
                        <Toolbar id="TB1">
                            <Title id="Title1" text="Order Details" />
                            <ToolbarSpacer />
                            <Label text="Order Number" />
                            <Input editable="false" id="order_id" width="100px"
                                value="{orderModel>/order_id}" />
                            <DatePicker
                                id="order_date"
                                width="200px"
                                placeholder="Enter Date"
                                change="handleChange"
                                value="{orderModel>/order_date}"
                                enabled="false" />
                            <Label text="Voucher Number: {/voucher}" />

                        </Toolbar>
                    </f:toolbar>
                    <f:content>
                        <Label text="Contact No." />
                        <Input editable="false" id="contact" value="{orderModel>/contact_number}"
                            submit="onContactNumber" />
                        <Label text="Name" />
                        <Input editable="false" id="name" value="{orderModel>/name}" />
                        <Label text="Address" />
                        <Input editable="false" id="address" value="{orderModel>/address}" />
                        <Label text="Id Type" />
                        <Input editable="false" value="{orderModel>/id_type}"></Input>
                        <!-- <Select id="id_type"
                            enabled="false"
                            selectedKey="{orderModel>/id_type}"
                            items="{
                            path: 'idModel>/results'
                        }"
                            forceSelection="false">
                            <core:Item key="{idModel>item}" text="{idModel>item}" />
                            <layoutData>
                                <f:ColumnElementData cellsSmall="5" cellsLarge="5" />
                            </layoutData>
                        </Select> -->
                        <Input editable="false" value="{orderModel>/id_value}">

                        </Input>
                        <Label text="State" />
                        <Input editable="false" value="{orderModel>/state}">
                        </Input>
                        <!-- <Select id="State" selectedKey="{orderModel>/state_code}"
                            items="{
                            path: 'stateModel>/results'
                        }"
                            forceSelection="false">
                            <core:Item key="{stateModel>id}" text="{stateModel>item}" />
                        </Select> -->

                        <Label text="Pincode" />
                        <Input editable="false" value="{orderModel>/pincode}" />
                        <Label text="GST" />
                        <Input editable="false" value="{orderModel>/gst_number}" />

                    </f:content>
                </f:SimpleForm>

            </VBox>
            <HBox class="sapUiMediumMargin" justifyContent="SpaceBetween">
                <VBox>
                    <Label text="Type of Ornament" />
                    <Select id="om_type"
                        enabled="false"
                        selectedKey="{orderModel>/type}"
                        width="200px"
                        items="{
            path: 'omtypeModel>/results'
        }"
                        forceSelection="false">
                        <core:Item key="{omtypeModel>id}" text="{omtypeModel>item}" />
                    </Select>
                </VBox>

                <VBox>
                    <Label text="Purity" />
                    <Input editable="false" width="200px" value="{orderModel>/purity}" />
                    <!-- <Select id="purity"
                        width="200px"
                        items="{
                path: 'purityModel>/results'
            }"
                        forceSelection="false">
                        <core:Item key="{purityModel>item}" text="{purityModel>item}" /> -->
                    <!-- </Select> -->
                </VBox>
                <VBox>
                    <Label text="Rate/Gm." />
                    <Input editable="false" width="200px" id="rate" value="{orderModel>/rate}"
                        submit="calAddt" />
                </VBox>
                <VBox>
                    <Label text="Salesman" />
                    <Input editable="false" width="200px" value="{orderModel>/created_by}"
                    />
                    <!-- <Select id="salesman"
                        width="200px"
                        items="{
                path: 'salesModel>/results'
            }"
                        forceSelection="false">
                        <core:Item key="{salesModel>id}" text="{salesModel>user_name}" />
                    </Select> -->
                </VBox>
            </HBox>

            <HBox class="sapUiMediumMargin" justifyContent="SpaceBetween" direction="RowReverse">
                <VBox>
                    <HBox id="oldgoldBox" alignItems="Center" visible="false">
                        <Title level="h1" text="Old Gold Adj.(id :{/purchase_id}): " width="150px" />
                        <Input editable="false" value="{orderModel>/old_gold_amount}" width="100px"
                            textAlign="Right"
                            id="oldgold" class='fs-1' />
                    </HBox>
                    <HBox alignItems="Center">
                        <Title level="h1" text="Total Amount: " width="150px" />
                        <Title level="h1" id="totamount" text="{orderModel>/total_amount}"
                            width="100px" />
                    </HBox>
                </VBox>
                <VBox>
                    <Title level="h1" text="Payment mode" />
                    <HBox alignItems="Center">
                        <Title level="h1" text="Cash: " width="120px" />
                        <Input editable="false" id="cash" value="{orderModel>/cash}" />
                    </HBox>
                    <HBox alignItems="Center">
                        <Title level="h1" text="Card: " width="120px" />
                        <Input editable="false" id="card" value="{orderModel>/card}" />
                        <Input editable="false" id="apprcode" class="sapUiSmallMarginBegin"
                            placeholder="Approval code" value="{orderModel>/apprcode}" />
                    </HBox>
                    <HBox alignItems="Center">
                        <Title level="h1" text="Cheque: " width="120px" />
                        <Input editable="false" id="cheque" value="{orderModel>/cheque}" />
                        <Input editable="false" id="chequeno" class="sapUiSmallMarginBegin"
                            placeholder="Cheque number" value="{orderModel>/chequeno}" />
                    </HBox>
                    <HBox alignItems="Center">
                        <Title level="h1" text="UPI: " width="120px" />
                        <Input editable="false" id="upi" value="{orderModel>/upi}" />
                        <Input editable="false" id="upidetails" class="sapUiSmallMarginBegin"
                            placeholder="UPI id" value="{orderModel>/upidetails}" />
                    </HBox>

                    <HBox alignItems="Center">
                        <Title level="h1" text="Bank Transfer: " width="120px" />
                        <Input editable="false" id="bank" value="{orderModel>/bank}" />
                        <Input editable="false" id="bankdetails" class="sapUiSmallMarginBegin"
                            placeholder="Details" value="{orderModel>/bankdetails}" />
                    </HBox>
                    <TextArea id="addt" rows="3" cols="35" placeholder="Additional Notes"
                        value="{orderModel>/notes}" editable="false"></TextArea>
                </VBox>

            </HBox>
        </content>
        <footer>
            <OverflowToolbar>
                <HBox alignItems="Center" alignContent="Center" justifyContent="Center"
                    width="100%">
                    <Text text=" A RuDe Labs Production Â© 2024" />
                    <!-- <Button text='Submit' type='Success' press="onSave" /> -->

                </HBox>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>